<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardPlayerFragment">

    <TextView
        android:id="@+id/top_players_textView"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/useruid_text_box"
        android:backgroundTint="@color/green"
        android:gravity="center"
        android:text="@string/leaderboard_top_players"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/top_players_recyclerview_menu"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_players_textView"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/top_players_rank_textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/leaderboard_rank"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/top_players_score_textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/top_players_rank_textView"
            android:gravity="center"
            android:text="@string/leaderboard_score"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/top_players_player_textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toStartOf="@+id/leaderboard_menu_item_space"
            android:layout_toEndOf="@+id/top_players_score_textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/leaderboard_player"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Space
            android:id="@+id/leaderboard_menu_item_space"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:background="@drawable/useruid_text_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_players_recyclerview_menu"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboard_player_recyclerview"
        android:layout_width="350dp"
        android:layout_height="470dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/top_players_recyclerview_menu" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:hintEnabled="true"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@+id/view2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/leaderboard_search_player" />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>